<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="299dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_login_popup"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="13dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="13dp"
    tools:ignore="SmallSp,ContentDescription,RtlHardCoded">

    <com.alticast.viettelottcommons.widget.FontTextView
        app:fontTextView="@string/font_M"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="17dp"
        android:singleLine="false"
        android:text="@string/titleViettel3Gpackage"
        android:textColor="@color/yellow"
        android:textSize="18.3sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="8dp"
        android:background="#17ffffff" />


    <com.alticast.viettelottcommons.widget.FontTextView
        app:fontTextView="@string/font_M"
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:text="@string/msgPurchaseDataPacakge1"
        android:textColor="#b4b4b4"
        android:textSize="12sp" />

    <!--    <Space
            android:layout_width="wrap_content"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/txtDescription2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/msgPurchaseDataPacakge2"
            android:textColor="#66b4b4b4"
            android:textSize="11sp"
            android:visibility="gone" />-->

    <Space
        android:layout_width="wrap_content"
        android:layout_height="13dp" />


    <ListView
        android:id="@+id/listPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        android:dividerHeight="3dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <com.alticast.viettelottcommons.widget.FontCheckBox
        app:fontTextView="@string/font_M"
        android:id="@+id/checkAutoRenewal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@null"
        android:button="@drawable/btn_pop_warning_check"
        android:paddingLeft="5dp"
        android:text="@string/txtAutoRenewal"
        android:textColor="#ffb4b4b4"
        android:textSize="11.3sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <com.alticast.viettelottcommons.widget.FontTextView
        app:fontTextView="@string/font_M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txtAutoRenewalMsg"
        android:textColor="#66b4b4b4"
        android:textSize="9.6sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.alticast.viettelottcommons.widget.FontButtonView
            app:fontTextView="@string/font_M"
            android:id="@+id/btnPurchase"
            style="@style/Widget.Viettel.Button"
            android:layout_width="match_parent"
            android:layout_height="34.6dp"
            android:layout_weight="1"
            android:text="@string/dataPackageConfirmPurchase"
            android:textSize="12.6sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="3dp" />

        <com.alticast.viettelottcommons.widget.FontButtonView
            app:fontTextView="@string/font_M"
            android:id="@+id/btnCancel"
            style="@style/Widget.Viettel.Button"
            android:layout_width="match_parent"
            android:layout_height="34.6dp"
            android:layout_weight="1"
            android:text="@string/dataPackageCancel"
            android:textSize="12.6sp" />
    </LinearLayout>
</LinearLayout>

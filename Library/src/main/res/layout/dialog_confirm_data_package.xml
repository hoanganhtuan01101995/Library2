<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="285.6dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_login_popup"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    tools:ignore="SmallSp,ContentDescription,RtlHardCoded"
   >

    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="18.3dp"
        android:singleLine="false"
        android:text="@string/purchase_confirm"
        app:font="@string/font_B"
        android:textColor="#d9d9d9"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#17ffffff" />

    <com.alticast.viettelottcommons.widget.FontTextView
        app:font="@string/font_M"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/purchase_confirm_message"
        android:textColor="#b4b4b4"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.alticast.viettelottcommons.widget.FontTextView
            app:font="@string/font_M"
            android:id="@+id/txtPackageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#16bfca"
            android:textSize="12sp"
            android:text="@string/titleViettel3Gpackage" />

        <!--<com.alticast.viettelottcommons.widget.FontTextView-->
            <!--app:font="@string/font_M"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:textColor="#b4b4b4"-->
            <!--android:textSize="12sp"-->
            <!--android:text="\?" />-->

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="7dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.alticast.viettelottcommons.widget.FontTextView
            app:font="@string/font_M"
            android:id="@+id/txtPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="#f0f0f0"
            android:textSize="12sp"
            android:text="@string/price" />

        <Space
            android:layout_width="3dp"
            android:layout_height="wrap_content" />

        <com.alticast.viettelottcommons.widget.FontTextView
            app:font="@string/font_M"
            android:id="@+id/txtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="#ffcc05"
            android:textSize="12.6sp"
            android:text="39.000 VND" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="13dp" />

    <com.alticast.viettelottcommons.widget.FontTextView
        app:font="@string/font_M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#b4b4b4"
        android:textSize="11sp"
        android:visibility="gone"
        android:text="@string/dataPurchaseConfirmMsg" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:visibility="gone"
        />

    <com.alticast.viettelottcommons.widget.FontButtonView
        app:font="@string/font_M"
        android:id="@+id/btnPurchase"
        style="@style/Widget.Viettel.Button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/agree"
        android:textSize="12.6sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />


    <com.alticast.viettelottcommons.widget.FontButtonView
        app:font="@string/font_M"
        android:id="@+id/btnCancel"
        style="@style/Widget.Viettel.Button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/cancel"
        android:textSize="12.6sp" />

    <com.alticast.viettelottcommons.widget.FontTextView
        app:font="@string/font_M"
        android:id="@+id/hot_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="#858585"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="@string/purchase_hot_line" />

</LinearLayout>

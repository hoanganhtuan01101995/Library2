<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <com.alticast.viettelottcommons.widget.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/msgsubTitleSignUpOne"
        android:textColor="#80FFFFFF"
        android:textSize="@dimen/signup_title" />

    <RelativeLayout
        android:layout_width="278dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/input_login" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_phonenumber" />

            <com.alticast.viettelottcommons.widget.FontEditText
                android:id="@+id/id_input"
                style="@style/Viettel.Widget.EditTextPhase2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:hint="@string/create_account_id_hint_phone"
                android:inputType="number"
                android:textColorHint="#33FFFFFF"
                app:font="@string/font_RL" />
        </RelativeLayout>

    </RelativeLayout>

    <com.alticast.viettelottcommons.widget.FontButtonView
        android:id="@+id/verify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/signup_button_margin_top"
        android:textAllCaps="false"
        android:background="@drawable/btn_send_signup"
        android:text="@string/send"
        android:textColor="@color/selector_text_button_normal"
        android:textSize="@dimen/signup_button" />

</LinearLayout>

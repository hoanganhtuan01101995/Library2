<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    tools:ignore="SmallSp,ContentDescription,RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:src="@drawable/btn_back_toolbar" />

            <com.alticast.viettelottcommons.widget.FontTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/create_account_title"
                android:textColor="@color/white"
                android:textSize="@dimen/signup_topbar"
                app:font="@string/font_REB" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#FF070B11" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <View
                android:layout_width="304dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/tab_progress_bg"
                android:paddingBottom="4dp" />

            <LinearLayout
                android:layout_width="304dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_number1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/layout_one_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:visibility="visible">

                        <com.alticast.viettelottcommons.widget.FontTextView
                            android:id="@+id/txt_number1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="01"
                            android:textColor="#CCFFFFFF"
                            android:textSize="@dimen/signup_number" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="4dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/tab_progress_focus" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_one_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="4dp"
                            android:layout_below="@+id/txt_number1_nor"
                            android:src="@drawable/tab_progress_focus"
                            android:visibility="invisible" />

                        <com.alticast.viettelottcommons.widget.FontTextView
                            android:id="@+id/txt_number1_nor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="01"
                            android:textColor="#CCFFFFFF"
                            android:textSize="@dimen/signup_number_normal" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_number2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/layout_two_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="4dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/tab_progress_focus" />

                        <com.alticast.viettelottcommons.widget.FontTextView
                            android:id="@+id/txt_number2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="02"
                            android:textColor="#CCFFFFFF"
                            android:textSize="@dimen/signup_number" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_two_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone">

                        <com.alticast.viettelottcommons.widget.FontTextView
                            android:id="@+id/txt_number2_nor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="02"
                            android:textColor="#CCFFFFFF"
                            android:textSize="@dimen/signup_number_normal" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="4dp"
                            android:layout_below="@+id/txt_number2_nor"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/tab_progress_focus"
                            android:visibility="invisible" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/layout_three_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.alticast.viettelottcommons.widget.FontTextView
                            android:id="@+id/txt_number3"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"
                            android:text="03"
                            android:textColor="#CCFFFFFF"
                            android:textSize="@dimen/signup_number" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_number3"
                            android:src="@drawable/tab_progress_focus" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_three_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.alticast.viettelottcommons.widget.FontTextView
                            android:id="@+id/txt_number3_nor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="03"
                            android:textColor="#CCFFFFFF"
                            android:textSize="@dimen/signup_number_normal" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="4dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/tab_progress_focus"
                            android:visibility="invisible" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <include
            android:id="@+id/fragment_signup_one"
            layout="@layout/fragment_signup_one"
            android:visibility="visible" />

        <include
            android:id="@+id/fragment_signup_two"
            layout="@layout/fragment_signup_two"
            android:visibility="gone" />

        <include
            android:id="@+id/fragment_signup_three"
            layout="@layout/fragment_signup_three"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
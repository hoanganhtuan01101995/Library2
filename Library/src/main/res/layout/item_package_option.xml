<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPackageOptionBtn"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="vertical"
    android:background="@drawable/bg_button_purchase"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center"
    android:paddingBottom="10dp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/txtPackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="dddd"
            app:fontTextView="@string/font_M"
            android:textColor="@color/button_text_yellow"
            android:textSize="13sp"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="4dp" />

    <LinearLayout
        android:id="@+id/layoutPackagePrice"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutSinglePriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="visible">

            <com.alticast.viettelottcommons.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:duplicateParentState="true"
                android:singleLine="true"
                android:text="@string/purchase_point_prefix"
                app:fontTextView="@string/font_M"
                android:textAppearance="@style/TextAppearance.Viettel.Button"
                android:textColor="@color/purchase_button_text"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:src="@drawable/icon_fxpoint" />

            <com.alticast.viettelottcommons.widget.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:singleLine="true"
                android:text="@string/purchase_point"
                app:fontTextView="@string/font_M"
                android:textAppearance="@style/TextAppearance.Viettel.Button"
                android:textColor="@color/purchase_button_text"
                android:textSize="13sp" />
        </LinearLayout>

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/txtPackagePriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:singleLine="true"
            android:text="@string/purchase_normal_package_price"
            app:fontTextView="@string/font_M"
            android:textAppearance="@style/TextAppearance.Viettel.Button"
            android:textColor="@color/purchase_button_text"
            android:textSize="13sp"
            android:visibility="gone" />

        <com.alticast.viettelottcommons.widget.FontTextView
            android:layout_marginLeft="3dp"
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:singleLine="true"
            app:fontTextView="@string/font_M"
            android:textAppearance="@style/TextAppearance.Viettel.Button"
            tools:text="@string/purchase_vnd_month" />
    </LinearLayout>
<!--    <Space
        android:layout_width="wrap_content"
        android:layout_height="4dp" />-->
    <com.alticast.viettelottcommons.widget.FontTextView
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/txtDescription"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description\n123456\n1234"
        android:ellipsize="end"
        app:fontTextView="@string/font_M"
        android:textColor="@color/button_text_package_option"
        android:textSize="10sp"/>
</LinearLayout>

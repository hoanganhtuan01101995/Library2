<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Viettel" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Viettel.Inverse" parent="TextAppearance.AppCompat.Inverse">

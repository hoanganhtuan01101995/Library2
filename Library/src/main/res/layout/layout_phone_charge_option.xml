<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">
    <com.alticast.viettelottcommons.widget.FontTextView
        style="@style/Wallet.SectionTitle"
        android:text="@string/vWalletSelectChargeOptionTitle"
        app:font="@string/font_B" />

    <com.alticast.viettelottcommons.widget.FontTextView
        style="@style/Wallet.SectionDescription"
        android:layout_marginRight="@dimen/wallet_margin"
        android:layout_marginTop="@dimen/wallet_text_margin"
        android:text="@string/vWalletSelectChargeOptionDes"
        app:font="@string/font_M" />
    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/txtPromotionDescription"
        style="@style/Wallet.SectionDescription"
        android:textColor="#FFFFCC05"
        app:font="@string/font_M" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listAmountOption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:fadeScrollbars="false"
            android:overScrollMode="never"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical" />
    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">
    <com.alticast.viettelottcommons.widget.FontTextView
        style="@style/Wallet.SectionTitle"
        android:text="@string/vWalletEnterOTPTitle"
        app:font="@string/font_B" />

    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/txtFreeWifiDescription"
        style="@style/Wallet.SectionDescription"
        android:layout_marginRight="@dimen/wallet_margin"
        android:text="@string/vWalletEnterOTPDescription"
        app:font="@string/font_M" />


    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/txtPackageTitle"
        style="@style/Wallet.PackageName"
        android:text="@string/vWalletChargeAmountTitle"
        android:layout_marginTop="@dimen/mediumMargin"
        app:font="@string/font_B" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.alticast.viettelottcommons.widget.FontTextView
                style="@style/VWallet.Money"
                android:id="@+id/txtVWalletBalance"
                android:text="0"
                app:font="@string/font_M" />
            <com.alticast.viettelottcommons.widget.FontTextView
                style="@style/VWallet.Unit"
                android:text="VNĐ"
                android:layout_marginLeft="4dp"
                app:font="@string/font_M" />
        </LinearLayout>
        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/txtBonus"
            style="@style/VWallet.Bonus"
            android:layout_marginLeft="4dp"
            android:text="(10 % Bonus)"
            android:textColor="#FFFFCC05"
            app:font="@string/font_M" />
    </LinearLayout>

    <com.alticast.viettelottcommons.widget.FontTextView
        style="@style/Wallet.PackageName"
        android:text="@string/vWalletOTPTitle"
        android:layout_marginTop="@dimen/mediumMargin"
        app:font="@string/font_B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallMargin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.alticast.viettelottcommons.widget.FontEditText
                android:id="@+id/id_input"
                style="@style/Viettel.Widget.EditTextPhase2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/white50"
                android:inputType="text"
                app:font="@string/font_B" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/underlineAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_login" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <com.alticast.viettelottcommons.widget.FontButtonView
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/smallMargin"
            android:text="@string/agree"
            app:font="@string/font_B"
            style="@style/ButtonPurchaseDialog"/>

        <com.alticast.viettelottcommons.widget.FontButtonView
            android:id="@+id/btnCancel"
            style="@style/ButtonPurchaseDialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/smallMargin"
            app:font="@string/font_B"
            android:text="@string/cancel" />
    </LinearLayout>



</LinearLayout>
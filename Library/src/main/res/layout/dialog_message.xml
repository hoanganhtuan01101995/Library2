<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_login_popup"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    tools:ignore="SmallSp,ContentDescription,RtlHardCoded">

    <LinearLayout
        android:id="@+id/title_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="17dp"
            android:textColor="#ffcc05"
            android:textSize="18sp"
            android:visibility="gone"
            app:font="@string/font_M" />

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/long_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="17dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:visibility="gone"
            app:font="@string/font_M" />

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#828282"
            android:textSize="13sp"
            android:visibility="gone"
            app:font="@string/font_M" />

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/facebookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffe1e1e1"
            android:textSize="18.3sp"
            app:font="@string/font_M" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:background="#17ffffff" />
    </LinearLayout>

    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/message_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="#1a92b6"
        android:textSize="14sp"
        android:visibility="gone"
        app:font="@string/font_M" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/facebookMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:singleLine="false"
            android:textColor="#b4b4b4"
            android:textSize="12sp"
            android:visibility="gone"
            app:font="@string/font_M" />

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:singleLine="false"
            android:textColor="#b4b4b4"
            android:textSize="13sp"
            app:font="@string/font_M" />

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/colorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:singleLine="false"
            android:textColor="#ffcc05"
            android:textSize="13sp"
            app:font="@string/font_M" />
    </RelativeLayout>

    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/message_emphasis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="#f0f0f0"
        android:textSize="14sp"
        android:visibility="gone"
        app:font="@string/font_M" />

    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/facebookMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:visibility="gone"
        app:font="@string/font_M" />

    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/message_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="#828282"
        android:textSize="13sp"
        android:visibility="gone"
        app:font="@string/font_M" />

    <Space
        android:id="@+id/button_space"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <com.alticast.viettelottcommons.widget.FontButtonView
        android:id="@+id/button1"
        style="@style/Widget.Viettel.ButtonPhase2"
        android:layout_width="match_parent"
        android:layout_height="34.6dp"
        android:visibility="gone"
        app:font="@string/font_M" />

    <com.alticast.viettelottcommons.widget.FontButtonView
        android:id="@+id/button2"
        style="@style/Widget.Viettel.ButtonPhase2"
        android:layout_width="match_parent"
        android:layout_height="34.6dp"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:visibility="gone"
        app:font="@string/font_M" />

    <com.alticast.viettelottcommons.widget.FontButtonView
        android:id="@+id/button3"
        style="@style/Widget.Viettel.ButtonPhase2"
        android:layout_width="match_parent"
        android:layout_height="34.6dp"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:visibility="gone"
        app:font="@string/font_M" />

</LinearLayout>

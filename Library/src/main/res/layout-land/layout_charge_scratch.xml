<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">
    <com.alticast.viettelottcommons.widget.FontTextView
        style="@style/Wallet.SectionTitle"
        android:text="@string/vWalletEnterScratchCardTitle"
        android:layout_marginTop="@dimen/mediumMargin"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        app:font="@string/font_B" />

    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/txtPromotion"
        style="@style/Wallet.SectionDescription"
        android:layout_marginTop="@dimen/wallet_text_margin"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:gravity="center_horizontal"
        android:textColor="@color/bonus_color"
        app:font="@string/font_M" />

    <com.alticast.viettelottcommons.widget.FontTextView
        style="@style/Wallet.PackageName"
        android:text="@string/vWalletEnterScratchCardSerialTitle"
        android:layout_marginTop="@dimen/mediumMargin"
        android:gravity="center_horizontal"
        app:font="@string/font_B" />

    <LinearLayout
        android:layout_width="@dimen/vWalletWidth1"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallMargin"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.alticast.viettelottcommons.widget.FontEditText
                android:id="@+id/id_input_card_number"
                style="@style/Viettel.Widget.EditTextPhase2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textColorHint="@color/white50"
                android:inputType="number"
                app:font="@string/font_B" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_login" />
    </LinearLayout>
    <com.alticast.viettelottcommons.widget.FontTextView
        style="@style/Wallet.PackageName"
        android:text="@string/vWalletEnterScratchCardPinCodeTitle"
        android:layout_marginTop="@dimen/largeMargin"
        android:gravity="center_horizontal"
        app:font="@string/font_B" />

    <LinearLayout
        android:layout_width="@dimen/vWalletWidth1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/smallMargin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.alticast.viettelottcommons.widget.FontEditText
                android:id="@+id/id_input_pin_number"
                style="@style/Viettel.Widget.EditTextPhase2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textColorHint="@color/white50"
                android:inputType="number"
                app:font="@string/font_B" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_login" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/vWalletWidth2"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <com.alticast.viettelottcommons.widget.FontButtonView
            android:id="@+id/btnCharge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/smallMargin"
            android:text="@string/agree"
            app:font="@string/font_B"
            style="@style/ButtonPurchaseDialog"/>

        <com.alticast.viettelottcommons.widget.FontButtonView
            android:id="@+id/btnCancel"
            style="@style/ButtonPurchaseDialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/smallMargin"
            app:font="@string/font_B"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>
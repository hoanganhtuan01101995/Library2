<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_login_popup"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    tools:ignore="SmallSp,ContentDescription,RtlHardCoded">

    <com.alticast.viettelottcommons.widget.FontTextView
        app:font="@string/font_M"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="17dp"
        android:singleLine="false"
        android:textColor="#fff"
        android:textSize="14sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#17ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <com.alticast.viettelottcommons.widget.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purchase_price"
            android:textAllCaps="true"
            android:textColor="#828282"
            android:textSize="12sp"
            app:font="@string/font_B"
            android:textStyle="bold" />

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/purchase_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textAllCaps="true"
            android:textColor="#f0f0f0"
            android:textSize="12sp"
            app:font="@string/font_B"
            android:textStyle="bold" />

        <com.alticast.viettelottcommons.widget.FontTextView
            app:font="@string/font_M"
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_unit"
            android:textSize="11sp" />

    </LinearLayout>

    <com.alticast.viettelottcommons.widget.FontTextView
        app:font="@string/font_M"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/vod_popup_desc2"
        android:textColor="#b4b4b4"
        android:textSize="12sp" />

    <com.alticast.viettelottcommons.widget.FontEditText        app:font="@string/font_M"
        android:id="@+id/input"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:gravity="center_vertical"
        android:imeOptions="flagNoFullscreen"
        android:inputType="textPassword"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:singleLine="true"
        android:textColor="#b4b4b4"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#17ffffff" />


    <com.alticast.viettelottcommons.widget.FontButtonView       app:font="@string/font_M"
        android:id="@+id/enter_button"
        style="@style/Widget.Viettel.Button"
        android:layout_width="match_parent"
        android:layout_height="34.6dp"
        android:textSize="13sp"
        android:text="@string/enter" />


    <com.alticast.viettelottcommons.widget.FontButtonView       app:font="@string/font_M"
        android:id="@+id/cancel_button"
        style="@style/Widget.Viettel.Button"
        android:layout_width="match_parent"
        android:layout_height="34.6dp"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:text="@string/cancel" />

</LinearLayout>

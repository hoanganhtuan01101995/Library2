<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_login_popup"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    tools:ignore="SmallSp,ContentDescription,RtlHardCoded">

    <com.alticast.viettelottcommons.widget.FontTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="17dp"
        android:singleLine="false"
        android:text="@string/purchase_confirm"
        android:textColor="#d9d9d9"
        android:textSize="15sp"
        app:fontTextView="@string/font_B"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#17ffffff" />

    <com.alticast.viettelottcommons.widget.FontTextView
        app:fontTextView="@string/font_M"
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/purchase_confirm_message"
        android:textColor="#b4b4b4"
        android:textSize="13sp" />

    <com.alticast.viettelottcommons.widget.FontTextView
        app:fontTextView="@string/font_M"
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:singleLine="false"
        android:textColor="#1a92b6"
        android:textSize="13sp"
        tools:text="Single VOD title" />

    <com.alticast.viettelottcommons.widget.FontTextView
        app:fontTextView="@string/font_M"
        android:id="@+id/message_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="#f1b977"
        android:textSize="13sp"
        tools:text="@string/purchase_flexiplus_user_message" />

    <com.alticast.viettelottcommons.widget.FontTextView
        app:fontTextView="@string/font_M"
        android:id="@+id/message_bundle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:singleLine="false"
        android:textColor="#b4b4b4"
        android:textSize="13sp"
        tools:text="@string/purchase_subcription_message_2" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/point_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:src="@drawable/icon_fxpoint" />

        <com.alticast.viettelottcommons.widget.FontTextView
            app:fontTextView="@string/font_M"
            android:id="@+id/price_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="#b4b4b4"
            android:textSize="13sp"
            tools:text="Point 7.000 VND/24h" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:id="@+id/layoutSubscriptionMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.alticast.viettelottcommons.widget.FontTextView
            app:fontTextView="@string/font_M"
            android:id="@+id/message_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#b4b4b4"
            android:textSize="13sp"
            android:text="@string/purchase_subcription_message_1" />

        <com.alticast.viettelottcommons.widget.FontTextView
            app:fontTextView="@string/font_M"
            android:id="@+id/message_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:textColor="#b4b4b4"
            android:textSize="13sp"
            android:text="@string/purchase_subcription_message_2" />
    </LinearLayout>

    <com.alticast.viettelottcommons.widget.FontTextView
        app:fontTextView="@string/font_M"
        android:id="@+id/txtDescriptionPackageMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:singleLine="false"
        android:textColor="#b4b4b4"
        android:textSize="13sp"
        tools:text="@null" />

    <com.alticast.viettelottcommons.widget.FontButtonView
        app:fontTextView="@string/font_M"
        android:id="@+id/purchase_button"
        style="@style/Widget.Viettel.Button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/purchase"
        android:textSize="14sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />


    <com.alticast.viettelottcommons.widget.FontButtonView
        app:fontTextView="@string/font_M"
        android:id="@+id/cancel_button"
        style="@style/Widget.Viettel.Button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/cancel"
        android:textSize="14sp" />

    <com.alticast.viettelottcommons.widget.FontTextView
        app:fontTextView="@string/font_M"
        android:id="@+id/hot_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="#858585"
        android:textSize="12sp"
        tools:text="@string/purchase_hot_line" />

</LinearLayout>

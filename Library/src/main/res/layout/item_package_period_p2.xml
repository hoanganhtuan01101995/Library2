<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/select_popup_option_bg"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="15dp">

        <com.alticast.viettelottcommons.widget.FontCheckBox
            android:id="@+id/checkId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:button="@drawable/selector_device_list"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:focusableInTouchMode="false" />
        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/txtDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:text="@string/buyfor1day"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            app:font="@string/font_B" />

    </LinearLayout>

</RelativeLayout>
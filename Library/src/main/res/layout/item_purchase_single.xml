<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center_vertical"
    tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry">

    <LinearLayout
        android:id="@+id/layoutSource"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/imgSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:singleLine="true"
            android:textColor="#dcdcdc"
            android:textSize="14sp"
            app:font="@string/font_M"
            tools:text="title" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="8dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.alticast.viettelottcommons.widget.FontTextView
                android:id="@+id/purchased_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#828282"
                android:layout_marginRight="17dp"
                android:textSize="12sp"
                app:font="@string/font_M"
                tools:text="MON 30/03(13:20)" />

            <com.alticast.viettelottcommons.widget.FontTextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:singleLine="true"
                android:textColor="#b4b4b4"
                android:textSize="12sp"
                app:font="@string/font_M"
                tools:text="250,000" />

            <com.alticast.viettelottcommons.widget.FontTextView
                android:id="@+id/price_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:singleLine="true"
                android:text="@string/pay_unit"
                android:textColor="#b4b4b4"
                android:textSize="11sp"
                app:font="@string/font_M" />

            <com.alticast.viettelottcommons.widget.FontTextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                app:font="@string/font_M" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

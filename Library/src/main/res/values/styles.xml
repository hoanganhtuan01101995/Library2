        <item name="android:paddingRight">9dp</item>
        <item name="android:textColor">#242424</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:autoLink">none</item>
        <item name="android:textColorLink">#242424</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

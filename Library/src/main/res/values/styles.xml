    </style>

    <style name="TextAppearance.Viettel.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffcc05</item>
    </style>

    <style name="TextAppearance.Viettel.Button" parent="TextAppearance.Viettel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="Widget.Viettel.Button" parent="android:Widget.Button">
        <item name="android:buttonStyle">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAppearance">@style/TextAppearance.Viettel.Button</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="Widget.Viettel.ButtonPhase2" parent="android:Widget.Button">
        <item name="android:buttonStyle">@null</item>
        <item name="android:gravity">center</item>

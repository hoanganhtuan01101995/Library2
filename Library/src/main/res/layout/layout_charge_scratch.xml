<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <com.alticast.viettelottcommons.widget.FontTextView
            style="@style/Wallet.SectionTitle"
            android:text="@string/vWalletEnterScratchCardTitle"
            app:fontTextView="@string/font_B" />

        <com.alticast.viettelottcommons.widget.FontTextView
            android:id="@+id/txtPromotion"
            style="@style/Wallet.SectionDescription"
            android:layout_marginRight="@dimen/wallet_margin"
            android:layout_marginTop="@dimen/wallet_text_margin"
            android:textColor="@color/bonus_color"
            app:fontTextView="@string/font_M" />

        <com.alticast.viettelottcommons.widget.FontTextView
            style="@style/Wallet.PackageName"
            android:layout_marginTop="@dimen/mediumMargin"
            android:text="@string/vWalletEnterScratchCardSerialTitle"
            app:fontTextView="@string/font_B" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smallMargin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.alticast.viettelottcommons.widget.FontEditText
                    android:id="@+id/id_input_card_number"
                    style="@style/Viettel.Widget.EditTextPhase2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColorHint="@color/white50"
                    app:fontTextView="@string/font_B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_login"
                android:orientation="horizontal" />
        </LinearLayout>

        <com.alticast.viettelottcommons.widget.FontTextView
            style="@style/Wallet.PackageName"
            android:layout_marginTop="@dimen/largeMargin"
            android:text="@string/vWalletEnterScratchCardPinCodeTitle"
            app:fontTextView="@string/font_B" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smallMargin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.alticast.viettelottcommons.widget.FontEditText
                    android:id="@+id/id_input_pin_number"
                    style="@style/Viettel.Widget.EditTextPhase2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColorHint="@color/white50"
                    app:fontTextView="@string/font_B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_login"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.alticast.viettelottcommons.widget.FontButtonView
                android:id="@+id/btnCharge"
                style="@style/ButtonPurchaseDialog"
                android:layout_width="0dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/smallMargin"
                android:layout_weight="1"
                android:text="@string/agree"
                app:fontTextView="@string/font_B" />

            <com.alticast.viettelottcommons.widget.FontButtonView
                android:id="@+id/btnCancel"
                style="@style/ButtonPurchaseDialog"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/smallMargin"
                android:layout_weight="1"
                android:text="@string/cancel"
                app:fontTextView="@string/font_B" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
